<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/">

    <TextView android:text="Hello Mani Bhushan!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hw" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dt"
        android:layout_below="@+id/hw"
        android:layout_marginTop="39dp"
        android:text="Today, Feb 28th" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/text28"
        android:layout_below="@+id/dt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="28 \u2109" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/text8"
        android:text="8 \u2109"
        android:layout_below="@+id/text28"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sym_def_app_icon"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_below="@+id/dt"
        android:layout_toRightOf="@+id/dt"
        android:layout_alignBottom="@+id/text8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/tmp_icon" />

</RelativeLayout>
